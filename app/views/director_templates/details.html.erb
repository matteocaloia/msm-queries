<h1> Director #<% @the_director.id%> details</h1>

<a href= "/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_ director.name %></dd>

  <dt>Dob</dt>
  <dd><%= @the_director.dob %></dd>
  
  <dt>Bio</dt>
  <dd><%= @the_director.bio %></dd>
  
  <dt>Image</dt>
  <dd><img src="<%= @the_director.image %>" width="200"></dd>
  
  <dt>Created at</dt> 
  <dd><%= @the_director.created_at %></dd>

  <dt>Updated at</dt> 
  <dd><%= @the_director.updated_at %></dd>
</dl>




<h2>Filmography</h2>

<%#= :director_id %>
<% matching_movies = Movie.where({ :director_id => @director.id })%>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>


<%= matching_movies.each do |movie| %>
  <tr>
    <td><%= movie.id %></td>
    <td>
      <img src ="<%= movie.image %>" width = "100">
    </td>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td><%= movie.director_id %></td>
    <td><a href="/movies/<%=movie.id%>"> Show details</a></td>
  </tr>
  
<%end%>
